<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recommend_item_layout"
    android:layout_width="120dp"
    android:layout_height="200dp"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/recommend_item_img"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp"

        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/recommend_item_brand"
        android:layout_width="match_parent"
        android:layout_height="18dp"

        android:textSize="12sp"

        app:layout_constraintTop_toBottomOf="@id/recommend_item_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/recommend_item_name"
        android:layout_width="match_parent"
        android:layout_height="42dp"

        android:textSize="16sp"

        app:layout_constraintTop_toBottomOf="@id/recommend_item_brand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>