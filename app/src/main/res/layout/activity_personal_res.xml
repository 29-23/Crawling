<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.PersonalResActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:textSize="15sp"
        android:text="당신의 퍼스널 컬러는... "
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/p_type_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/text_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.4"
        android:scaleType="fitXY"
        android:src="@drawable/spring"
        />

    <TextView
        android:id="@+id/p_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/p_type_bg"
        app:layout_constraintStart_toStartOf="@id/p_type_bg"
        app:layout_constraintEnd_toEndOf="@id/p_type_bg"
        app:layout_constraintBottom_toBottomOf="@id/p_type_bg"

        android:textSize="36sp"
        android:text="봄 웜톤"/>

    <TextView
        android:id="@+id/p_type_eng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/p_type_text"
        app:layout_constraintStart_toStartOf="@id/p_type_bg"
        app:layout_constraintEnd_toEndOf="@id/p_type_bg"
        android:textSize="24sp"
        android:text="Spring Warm"/>


    <TextView
        android:id="@+id/personal_exp_textview"
        android:layout_width="346dp"
        android:layout_height="124dp"

        android:text="@string/spring_exp"
        android:textColor="@color/black"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/p_type_bg"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/text_bestColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/personal_exp_textview"
        app:layout_constraintStart_toStartOf="parent"

        android:text="베스트 컬러"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <ImageView

        android:id="@+id/image_bestColor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/text_bestColor"
        app:layout_constraintBottom_toTopOf="@id/text_worstColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:src="@drawable/spring_best"
        />


    <TextView
        android:id="@+id/text_worstColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_bestColor"
        app:layout_constraintStart_toStartOf="parent"
        android:text="워스트 컬러"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/image_worstColor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/text_worstColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/winter_best"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_worstColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="퍼스널 OOTD 시작!"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reAnalysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="다시 진단하기"
        />


</androidx.constraintlayout.widget.ConstraintLayout>